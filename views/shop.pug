extends layout/main-layout.pug

block styles
    link(rel="stylesheet", href="css/main.css")
    link(rel="stylesheet", href="css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://dictionary.cambridge.org/pt/images/full/book_noun_001_01679.jpg?version=5.0.135")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even...
                        .card__actions
                            button.btn Add to Cart
        else
            h2 No one product!
